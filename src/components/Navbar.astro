---
import { ui } from '@/i18n/ui'
import { getPageInfo } from '@/utils/page'

const { currentLang, isHome, isTag, isAbout, getLocalizedPath } = getPageInfo(Astro.url.pathname)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}
const isTech = Astro.url.pathname.includes('/tech') || isHome
const isLife = Astro.url.pathname.includes('/life')
const isScience = Astro.url.pathname.includes('/science')
const isCategory = Astro.url.pathname.includes('/categories')

const isTagActive = isTag
const isAboutActive = isAbout
const isCategoryActive = isCategory
const isTechActive = isTech && !isLife && !isScience && !isCategory
const isLifeActive = isLife
const isScienceActive = isScience

function getNavItemClass(isActive: boolean) {
  return isActive
    ? 'highlight-static c-primary font-bold after:bottom-0.7em'
    : 'highlight-hover transition-[colors,font-weight] after:bottom-0.7em hover:(c-primary font-bold)'
}

// Navigation items - Tech/Life/Science/Tags/Category/About
const navItems = [
  {
    href: '/tech',
    label: currentUI.tech || 'Tech',
    className: getNavItemClass(isTechActive),
  },
  {
    href: '/life',
    label: currentUI.life || 'Life',
    className: getNavItemClass(isLifeActive),
  },
  {
    href: '/science',
    label: currentUI.science || 'Science',
    className: getNavItemClass(isScienceActive),
  },
  {
    href: '/tags',
    label: currentUI.tags,
    className: getNavItemClass(isTagActive),
  },
  {
    href: '/categories',
    label: currentUI.categories || 'Categories',
    className: getNavItemClass(isCategoryActive),
  },
  {
    href: '/about',
    label: currentUI.about,
    className: getNavItemClass(isAboutActive),
  },
]
---

<nav
  aria-label="Site Navigation"
  class="top-navbar"
>
  <ul class="nav-list">
    {navItems.map(item => (
      <li>
        <a
          href={getLocalizedPath(item.href)}
          class={item.className}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
.top-navbar {
  --at-apply: 'text-3.6 font-semibold font-navbar cjk:tracking-wide';
}

.nav-list {
  --at-apply: 'flex flex-wrap gap-x-6 gap-y-2 list-none p-0 m-0';
}

.nav-list li {
  --at-apply: 'leading-2em';
}
</style>

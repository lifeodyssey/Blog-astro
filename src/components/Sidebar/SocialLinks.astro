---
import { themeConfig } from '@/config'

const { links } = themeConfig.footer
---

<div class="social-links">
  <h3 class="links-title">Links</h3>
  <ul class="links-list">
    {links.map(link => (
      <li>
        <a
          href={link.url}
          target={link.url.startsWith('/') ? undefined : '_blank'}
          rel={link.url.startsWith('/') ? undefined : 'noopener noreferrer'}
          class="link-item"
        >
          {link.name}
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
.social-links {
  --at-apply: 'p-4 bg-secondary/5 rounded-lg';
}

.links-title {
  --at-apply: 'text-sm font-semibold c-primary mb-3';
}

.links-list {
  --at-apply: 'list-none p-0 m-0 space-y-2';
}

.link-item {
  --at-apply: 'text-sm c-secondary hover:c-primary transition-colors';
}
</style>

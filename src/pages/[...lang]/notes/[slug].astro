---
import type { CollectionEntry } from 'astro:content'
import type { Language } from '@/i18n/config'
import { render } from 'astro:content'
import PostDate from '@/components/PostDate.astro'
import BackButton from '@/components/Widgets/BackButton.astro'
import TOC from '@/components/Widgets/TOC.astro'
import { allLocales } from '@/config'
import { getLangFromLocale, getLangRouteParam } from '@/i18n/lang'
import Layout from '@/layouts/Layout.astro'
import { getNoteGroups, getNoteSlug } from '@/utils/content'
import { getNoteDescription } from '@/utils/description'

export async function getStaticPaths() {
  const groups = await getNoteGroups()

  return allLocales.flatMap(lang => groups
    .map((group) => {
      const note = group.byLang[lang]
      if (!note) {
        return null
      }

      return {
        params: {
          lang: getLangRouteParam(lang),
          slug: group.slug,
        },
        props: {
          note,
          supportedLangs: group.supportedLangs,
        },
      }
    })
    .filter(Boolean),
  )
}

interface Props {
  note: CollectionEntry<'notes'>
  supportedLangs: Language[]
}

const { note, supportedLangs } = Astro.props as Props
const currentLang = getLangFromLocale(Astro.currentLocale)
const slug = getNoteSlug(note)
const description = getNoteDescription(note, 'meta')
const { Content, headings, remarkPluginFrontmatter } = await render(note)
---

<Layout
  postTitle={note.data.title}
  postDescription={description}
  postSlug={`notes/${note.id}`}
  supportedLangs={supportedLangs}
>
  <article class="heti">
    <div class="relative">
      <BackButton />
      <h1 class="post-title">
        <span
          transition:name={`note-${slug}${currentLang ? `-${currentLang}` : ''}`}
          data-disable-theme-toggle-transition
        >
          {note.data.title}
        </span>
      </h1>
    </div>

    <div
      class="mb-17.2 block c-primary font-time"
      transition:name={`note-time-${slug}${currentLang ? `-${currentLang}` : ''}`}
      data-disable-theme-toggle-transition
    >
      <PostDate
        date={note.data.published}
        updatedDate={note.data.updated}
        minutes={remarkPluginFrontmatter.minutes}
      />
    </div>

    {note.data.toc && <TOC headings={headings} />}

    <div id="post-content">
      <Content />
    </div>
  </article>
</Layout>

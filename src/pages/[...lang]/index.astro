---
import PostList from '@/components/PostList.astro'
import { allLocales } from '@/config'
import { getLangFromLocale, getLangRouteParam } from '@/i18n/lang'
import { ui } from '@/i18n/ui'
import Layout from '@/layouts/Layout.astro'
import { getPostsByCategory } from '@/utils/content'

export async function getStaticPaths() {
  return allLocales.map(lang => ({
    params: { lang: getLangRouteParam(lang) },
  }))
}

const currentLang = getLangFromLocale(Astro.currentLocale)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}

// Homepage now shows Tech posts by default
const techPosts = await getPostsByCategory('tech', currentLang)
const categoryLabel = currentUI.tech || 'Tech'
---

<Layout>
  <section class="mb-7.5">
    <h1 class="mb-6 text-5 font-bold cjk:tracking-wide lg:text-6">
      {categoryLabel}
    </h1>
    <div class="uno-decorative-line" />
    <PostList posts={techPosts} lang={currentLang} />
  </section>
</Layout>

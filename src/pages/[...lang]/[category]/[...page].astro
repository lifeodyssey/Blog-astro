---
import type { GetStaticPathsOptions, Page } from 'astro'
import type { Post } from '@/types'
import Pagination from '@/components/Pagination.astro'
import PostList from '@/components/PostList.astro'
import { allLocales } from '@/config'
import { getLangFromLocale, getLangRouteParam } from '@/i18n/lang'
import { getLocalizedPath } from '@/i18n/path'
import { ui } from '@/i18n/ui'
import Layout from '@/layouts/Layout.astro'
import { getPostsByCategory, type PostCategory } from '@/utils/content'

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const POSTS_PER_PAGE = 10
  const categories: PostCategory[] = ['tech', 'life', 'science']
  const results = []

  for (const lang of allLocales) {
    for (const category of categories) {
      const posts = await getPostsByCategory(category, lang)
      const langParam = getLangRouteParam(lang)

      const paginatedPages = paginate(posts, {
        pageSize: POSTS_PER_PAGE,
        params: { lang: langParam, category },
        props: { category, lang },
      })

      results.push(...paginatedPages)
    }
  }

  return results
}

const { category, lang } = Astro.props as { category: PostCategory, lang: string }
const page = Astro.props.page as Page<Post>
const currentLang = getLangFromLocale(Astro.currentLocale)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}

const categoryLabel = category === 'tech'
  ? (currentUI.tech || 'Tech')
  : category === 'science'
    ? (currentUI.science || 'Science')
    : (currentUI.life || 'Life')

// Base URL for pagination (without page number)
const baseUrl = getLocalizedPath(`/${category}`, currentLang)
---

<Layout postTitle={categoryLabel}>
  <section class="mb-7.5">
    <h1 class="mb-6 text-5 font-bold cjk:tracking-wide lg:text-6">
      {categoryLabel}
    </h1>
    <div class="uno-decorative-line" />
    <PostList posts={page.data} lang={currentLang} />
    <Pagination
      currentPage={page.currentPage}
      totalPages={page.lastPage}
      baseUrl={baseUrl}
    />
  </section>
</Layout>
